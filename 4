#include "stdafx.h"
#include "iostream"
using namespace std;


int main()
{
	setlocale(LC_ALL, "ru");
	int x, c;
	float n, b;
	bool check=false;
	cout << "Кол-во чисел в массиве: ";
	cin >> x;

	float *a = new float[x];
	for (int i = 0; i < x; i++) {
		cin >> a[i];
	}
	for (int i = 0;i < x;i++) {
		if (a[i] > 0) {
			n = a[i];
			c = i;
			check = true;
		}
	}
	if (check) {
		b = a[0];
		a[0] = n;
		a[c] = b;
		for (int i = 0;i < x;i++) {
			cout << a[i] << "\t";
		}
	}
	else
	{
		cout << "Положительных чисел нет." << endl;
	}
	delete[] a;
	return 0;
}
